@model IEnumerable<CovidCare.Models.ApplicationUser>

    <br />
    <div class="backgroundWhiteBorder">
        <div class=" container p-3">
            <div class=" row pt-4">
                <div class="card text-left" style="width: 100%" height:30%>
                    <div class="card-header bg-dark text-light ml-0 row container">
                        <div class="col-6">
                            <i class="fas fa-align-left"></i>
                            Application UserList
                        </div>
                        <div class="col-6 text-right">
                            <a asp-area="Identity" asp-page="/Account/Register" a class="btn btn-outline-info btn-sm"><i class="fas fa-user-plus"></i> Register New User </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br /><br />
        @if (Model.Count() > 0)
        {
            <table class="table-bordered table-stripped table-hover" style="width: 100% ">
                <thead class="thead-dark" style="text-align:center">
                    <tr>
                        <th scope="col">NID</th>
                        <th scope="col">Full Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Gender</th>
                        <th scope="col">DOB</th>
                        <th scope="col">Vaccination Status</th>
                        <th scope="col">Tested Positive Date</th>
                        <th scope="col">Contact</th>
                        <th scope="col">Address</th>
                        <th scope="col">Description</th>
                        <th scope="col">Operation</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.NID</td>
                            <td>@obj.FullName</td>
                            <td>@obj.Email</td>
                            <td>@obj.Gender</td>
                            <td>@obj.DOB</td>
                            <td>@obj.VaccinationStatus</td>
                            <td>@obj.PosDate</td>
                            <td>@obj.PhoneNumber</td>
                            <td>@obj.Address</td>
                            <td>@obj.Description</td>
                            <td class="text-center">
                                <div class="w-100 btn-group" role="group">
                                    <a class="btn btn-info mx-2" asp-route-Id="@obj.Id" asp-controller="AdminActivities" asp-action="Edit"><i class="fas fa-user-edit"></i>Edit</a>
                                    <a asp-controller="AdminActivities" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2"><i class="fas fa-user-minus"></i>Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center"><p> No User is Registered yet.</p></div>
        
        }

    </div>
        
