@model IEnumerable<CovidCare.Models.ApplicationUser>
<div class=" container p-3">
    <div class=" row pt-4">
        <div class="col-10">
            <h2 class=" text-primary">ApplicationUserList</h2>
        </div>
    </div>
    <div class="col-md-12 text-right">
        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary">Register New User</a>

    </div>
    <br /><br />
    @if (Model.Count()>0)
    {
        <table class="table-bordered table-stripped table-hover" style="width: 100% ">
            <thead class="thead-dark" style="text-align:center">
                <tr>
                    <th scope="col">User Id</th>
                    <th scope="col">NID</th>
                    <th scope="col">Full Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Age</th>
                    <th scope="col">Vaccination Status</th>
                    <th scope="col">Tested Positive Date</th>
                    <th scope="col">Contact</th>
                    <th scope="col">Address</th>
                    <th scope="col">Description</th>
                    <th scope="col">Operation</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td>@obj.Id</td>
                    <td>@obj.NID</td>
                    <td>@obj.FullName</td>
                    <td>@obj.Email</td>
                    <td>@obj.Gender</td>
                    <td>@obj.Age</td>
                    <td>@obj.VaccinationStatus</td>
                    <td>@obj.PosDate</td>
                    <td>@obj.PhoneNumber</td>
                    <td>@obj.Address</td>
                    <td>@obj.Description</td>
                    <td class="text-center">
                        <div class="w-100 btn-group" role="group">
                            <a class="btn btn-info mx-2" asp-route-Id="@obj.Id" asp-controller="AdminActivities" asp-action="Edit">Edit</a>
                            <a asp-controller="AdminActivities" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No User is Registered yet.</p>
    }

</div>

