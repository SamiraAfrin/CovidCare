
@model IEnumerable<CovidCare.Models.Report>
    <br />
        <div class="backgroundWhiteBorder">
            <div class=" container p-3">
                <div class=" row pt-4">
                    <div class="card text-left" style="width: 100%" height:30%>
                        <div class="card-header bg-dark text-light ml-0 row container">
                            <div class="col-6">
                                <i class="fas fa-align-left"></i>  REPORT LIST
                            </div>
                            <div class="col-6 text-right">
                                <a asp-controller="UserActivities" asp-action="AddReport" a class="btn btn-outline-info btn-sm"><i class="fas fa-plus"></i> Add Report </a>
                                <a  asp-area="" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-info btn-sm">Dashboard</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div container="p-3">
                <h4>Message</h4>
                <ul>
                    <li>Emergency : You should contact with your doctor</li>
                    <li>Warning : You should be careful and take care of yourselves</li>
                    <li>Stable : Good to go. Take care and you will be fine.</li>
                </ul>
            </div>

            <br /><br />
            @if (Model.Count() > 0)
            {
                <table class="table-bordered table-stripped table-hover" style="width: 100% ">
                    <thead class="thead-dark" style="text-align:center">
                        <tr style="height:50px">
                            <th scope="col"> Date & Time </th>
                            <th scope="col">Body Temperature in Fahrenheit</th>
                            <th scope="col">Oximeter Reading</th>
                            <th scope="col">High Blood Pressure</th>
                            <th scope="col">Low Blood Pressure</th>
                            <th scope="col">Sugar Level</th>
                            <th scope="col">Description</th>
                            <th scope="col">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {
                        <tr style="height:50px">
                            <td class="text-center">@obj.Date</td>
                            <td class="text-center">@obj.BoTep</td>
                            <td class="text-center">@obj.OR</td>
                            <td class="text-center">@obj.BP_high</td>
                            <td class="text-center">@obj.BP_low</td>
                            <td class="text-center">@obj.SL</td>
                            <td class="text-center">@obj.Description</td>
                            @{
                               if (@obj.OR <= 92 || @obj.BoTep >= 102 || @obj.SL >= 10 || @obj.BP_high >= 140 || @obj.BP_high <= 90)
                               {
                                 <td class="badge-danger text-center">Emergency</td>
                                    
                                }
                                else if (@obj.OR <= 95 || @obj.BoTep >= 100 || obj.SL >= 9 || obj.BP_high >= 130 || obj.BP_high <= 110)
                                {
                                   
                                  <td class="badge-warning text-center">Warning</td>
                                }
                                else
                                {
                                   
                                   <td class="alert-info text-center">Stable</td>
                                }
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            { 
            <div class="text-center"><p > No Report is inserted yet.</p></div>
                
            }

        </div>



